{
  "manifest_version": 3,
  "name": "Web Tools",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "./public/scripts/background.js"
  },
  "side_panel": {
    "default_path": "index.html",
    "openPanelOnActionClick": true
  },
  "permissions": [
    "sidePanel",
    "contextMenus",
    "tabs"
  ]
}
